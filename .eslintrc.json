{
  "extends": ["airbnb", "prettier"],
  "parser": "babel-eslint",
  "plugins": ["react", "prettier"],
  "globals": {
    "react": true,
    "window": true,
    "document": true,
    "localStorage": true,
    "FormData": true,
    "FileReader": true,
    "Blob": true,
    "navigator": true,
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/prop-types": 0,
    "no-underscore-dangle": 0,
    "import/imports-first": ["error", "absolute-first"],
    "import/newline-after-import": "error",
    "no-console": "off",
    "import/prefer-default-export": "off",
    "no-shadow": "off",
    "jsx-a11y/label-has-associated-control": 0,

    "prettier/prettier": [
      "error",
      {
        "tabWidth": 2,
        "printWidth": 80,
        "singleQuote": true
      }
    ]
  },
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  }
}
